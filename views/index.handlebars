
<div class="container" id="banner">
  <div class="jumbotron border-primary">
    <h1 class="display-3">Your Penn Live News Scraper</h1>
    <button type="button" class="btn btn-outline-primary" id="scrapeBtn">Start Scraping</button>
    <a href="/saved" class="btn btn-outline-primary">Saved Articles</a>
     <button type="button" class="btn btn-outline-primary" id="clearBtn">Clear All</button>
  </div>
</div>

<!-- name of hbs obj that we created in the / route-->
<div class="container">
  {{#each articles}}
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body bg-light" id="articleContent">
          <img src="{{img}}" />
          <h3 class="card-title" id="title">{{title}}</h3>
          <a href="{{link}}" id="link">{{link}}</a>
          <!--this button will direct them to their saved comments-->
          <center>
            <span> <button class="saveBtn btn btn-primary" data-id={{_id}}>Save</button> </span>
          </center>
        </div>
      </div>
    </div>
  </div>
  {{/each}}

</div>